<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/border_margin"
    tools:targetApi="ice_cream_sandwich">

    <ImageView
        android:id="@+id/ivProfileImageContacts"
        android:layout_width="@dimen/standard_contact_image_size"
        android:layout_height="@dimen/standard_contact_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/border_margin"
        app:srcCompat="@drawable/ic_vector_account" />

    <TextView
        android:id="@+id/tvNameContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/ivProfileImageContacts"
        android:paddingTop="@dimen/border_margin"
        android:textAppearance="@style/text_name"
        tools:text="@string/firstlastname" />

    <TextView
        android:id="@+id/tvEmailContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameContacts"
        android:layout_toEndOf="@id/ivProfileImageContacts"
        android:layout_toRightOf="@id/ivProfileImageContacts"
        android:textAppearance="@style/text_email"
        tools:text="@string/email" />
</RelativeLayout>