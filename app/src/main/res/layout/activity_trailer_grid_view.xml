<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/general_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gvTrailor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llHeader"
        style="@style/gridview_style"/>

    <RelativeLayout
        android:id="@+id/llHeader"
        style="@style/header_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gvTrailor">

        <ImageButton
            android:id="@+id/ibCancel"
            android:layout_width="@dimen/border_margin"
            android:layout_height="@dimen/border_margin"
            style="@style/ib_trailer1"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/tvHeader"
            style="@style/tv_trailer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_trailer_ht"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/popular_movie_trailer" />

        <ImageButton
            android:id="@+id/imageButton3"
            style="@style/ib_trailer2"
            android:layout_width="@dimen/border_margin"
            android:layout_height="@dimen/border_margin"
            android:layout_toStartOf="@+id/ibCancel"
            android:contentDescription="@string/expand"
            android:onClick="ExpandTrailerView"
            app:srcCompat="@android:drawable/arrow_up_float" />

    </RelativeLayout>


    <!-- <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbTrailor"
        android:layout_centerInParent="true"
        android:visibility="gone"/> -->
</RelativeLayout>