<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/general_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gvTrailor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llHeader"
        style="@style/gridview_style"/>

    <LinearLayout
        android:id="@+id/llHeader"
        style="@style/header_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gvTrailor">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/tmdb_logo"
            android:src="@drawable/ic_tmdb_logo"
            />
        <TextView
            android:id="@+id/tvHeader"
            style="@style/tv_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_spacing"
            android:textAlignment="center"
            android:text="@string/tmdb_attribution_text" />

    </LinearLayout>


